<Window x:Class="SimplePing.Custom_ping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplePing"
        mc:Ignorable="d"
        Title="Custom ping" Height="112" Width="328" Icon="/cloud-sync.png">
    <Grid>
        <TextBox x:Name="Input_domain_or_ip" HorizontalAlignment="Left" Margin="10,52,0,0" TextWrapping="Wrap" Text="Domain or IP address" VerticalAlignment="Top" Width="231" RenderTransformOrigin="0.5,0.5" GotFocus="Input_domain_or_ip_GotFocus">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="Start_ping_button" Content="Ping" HorizontalAlignment="Left" Margin="246,51,0,0" VerticalAlignment="Top" Click="Start_ping_button_Click" Width="63"/>
        <TextBlock x:Name="ping_time_text" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Width="180" TextAlignment="Center"><Run Text="--"/><Run Language="en-gb" Text="ms"/></TextBlock>

    </Grid>
</Window>
